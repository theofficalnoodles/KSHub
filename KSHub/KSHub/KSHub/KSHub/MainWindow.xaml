<Window x:Class="KSHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:local="clr-namespace:KSHub"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KSHub" Height="820" Width="1300"
        Background="#F2F2F2" Icon="../assets/kshub.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/> <!-- toolbar -->
            <RowDefinition Height="Auto"/> <!-- tabs -->
            <RowDefinition Height="*"/> <!-- content -->
        </Grid.RowDefinitions>

        <!-- Top toolbar -->
        <Border Grid.Row="0" Background="#E8E8E8" Padding="8">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <Button Name="BtnNewTab" Width="36" Height="36" Margin="0,0,8,0">＋</Button>
                    <Button Name="BtnBack" Width="36" Height="36" Margin="0,0,8,0">◀</Button>
                    <Button Name="BtnForward" Width="36" Height="36" Margin="0,0,8,0">▶</Button>
                </StackPanel>

                <TextBox Name="Omnibox" Height="36" VerticalAlignment="Center" MinWidth="520"
                         Margin="8,0" HorizontalAlignment="Stretch"
                         Background="White" Padding="8,4" BorderBrush="#D0D0D0"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                    <Button Name="BtnLoadExtension" Width="36" Height="36" Margin="8,0">✱</Button>
                    <Button Name="BtnMakeDefault" Width="36" Height="36" Margin="8,0" ToolTip="Make default">★</Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Tab strip -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" Height="40" Background="#F7F7F7">
            <StackPanel Orientation="Horizontal" Name="TabStrip" VerticalAlignment="Center" Margin="6,6"/>
        </ScrollViewer>

        <!-- Content area -->
        <Grid Grid.Row="2" Background="White" Name="ContentGrid">
            <!-- Browser controls will be added here dynamically -->
            <Border VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.03">
                <TextBlock Text="KSHub" FontSize="72" Foreground="#6B33B8" FontWeight="Bold"/>
            </Border>
        </Grid>

        <!-- Splash sits above content initially (optional) -->
        <Border Name="Splash" Background="#F2F2F2" Grid.RowSpan="3" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="../assets/splash.png" Width="300" Height="140" Margin="6"/>
                <TextBlock Text="KSHub" Foreground="#6B33B8" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Small brand at bottom -->
        <TextBlock Text="KSHub" Foreground="#6B33B8" FontWeight="Bold"
                   HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="12"/>
    </Grid>
</Window>
